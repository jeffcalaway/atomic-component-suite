{
	"name": "atomic-component-suite",
	"publisher": "heycalaway",
	"displayName": "Atomic Component Suite",
	"description": "This extension is intended for building Useful Framework components for WordPress. It will not work otherwise.",
	"repository": {
		"type": "git",
		"url": "https://github.com/heycalaway/atomic-component-suite.git"
	},
	"version": "0.2.0",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:atomic-component-suite.generateComponentFiles",
		"onCommand:atomic-component-suite.generateComponentPartFile",
		"onCommand:atomic-component-suite.generateComponentStoriesFile",
		"onCommand:atomic-component-suite.generateComponentStyleFile",
		"onCommand:atomic-component-suite.generateComponentJavascriptFile",
		"onCommand:atomic-component-suite.generateComponentBlockFiles",
		"onCommand:atomic-component-suite.generateCarouselTemplate",
		"onCommand:atomic-component-suite.generateClickableTemplate",
		"onCommand:atomic-component-suite.generateFeaturedTemplate",
		"onCommand:atomic-component-suite.generateHeroTemplate",
		"onCommand:atomic-component-suite.generatePluralTemplate",
		"onCommand:atomic-component-suite.generateSectionTemplate"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "atomic-component-suite.generateComponentFiles",
				"title": "Default Files"
			},
			{
				"command": "atomic-component-suite.generateComponentPartFile",
				"title": "Template Part"
			},
			{
				"command": "atomic-component-suite.generateComponentStoriesFile",
				"title": "Stories"
			},
			{
				"command": "atomic-component-suite.generateComponentStyleFile",
				"title": "Style"
			},
			{
				"command": "atomic-component-suite.generateComponentJavascriptFile",
				"title": "Javascript"
			},
			{
				"command": "atomic-component-suite.generateComponentBlockFiles",
				"title": "Block"
			},
			{
				"command": "atomic-component-suite.generateCarouselTemplate",
				"title": "Carousel"
			},
			{
				"command": "atomic-component-suite.generateClickableTemplate",
				"title": "Clickable"
			},
			{
				"command": "atomic-component-suite.generateFeaturedTemplate",
				"title": "Featured"
			},
			{
				"command": "atomic-component-suite.generateHeroTemplate",
				"title": "Hero"
			},
			{
				"command": "atomic-component-suite.generatePluralTemplate",
				"title": "Plural"
			},
			{
				"command": "atomic-component-suite.generateSectionTemplate",
				"title": "Section"
			}
		],
		"submenus": [
			{
				"id": "atomic-component-suite.generate",
				"label": "Generate"
			},
			{
				"id": "atomic-component-suite.generate.cfiles",
				"label": "Component Files"
			},
			{
				"id": "atomic-component-suite.generate.templates",
				"label": "Templates"
			}
		],
		"menus": {
			"atomic-component-suite.generate": [
				{
					"submenu": "atomic-component-suite.generate.cfiles",
					"group": "2_workspace@1",
					"when": "explorerResourceIsFolder && resourcePath =~ /template-parts\\/(atoms|molecules|organisms)\\//"
				},
				{
					"command": "atomic-component-suite.generateComponentPartFile",
					"group": "2_workspace@2",
					"when": "explorerResourceIsFolder && resourcePath =~ /template-parts\\/(atoms|molecules|organisms)\\//"
				},
				{
					"command": "atomic-component-suite.generateComponentStoriesFile",
					"group": "2_workspace@3",
					"when": "explorerResourceIsFolder && resourcePath =~ /template-parts\\/(atoms|molecules|organisms)\\//"
				},
				{
					"command": "atomic-component-suite.generateComponentStyleFile",
					"group": "2_workspace@4",
					"when": "explorerResourceIsFolder && resourcePath =~ /template-parts\\/(atoms|molecules|organisms)\\//"
				},
				{
					"command": "atomic-component-suite.generateComponentJavascriptFile",
					"group": "2_workspace@5",
					"when": "explorerResourceIsFolder && resourcePath =~ /template-parts\\/(atoms|molecules|organisms)\\//"
				},
				{
					"command": "atomic-component-suite.generateComponentBlockFiles",
					"group": "2_workspace@6",
					"when": "explorerResourceIsFolder && resourcePath =~ /template-parts\\/organisms\\//"
				}
			],
			"atomic-component-suite.generate.cfiles": [
				{
					"command": "atomic-component-suite.generateComponentFiles",
					"group": "2_workspace@1",
					"when": "explorerResourceIsFolder && resourcePath =~ /template-parts\\/(atoms|molecules|organisms)\\//"
				},
				{
					"submenu": "atomic-component-suite.generate.templates",
					"group": "2_workspace@2",
					"when": "explorerResourceIsFolder && resourcePath =~ /template-parts\\/(atoms|molecules|organisms)\\//"
				}
			],
			"atomic-component-suite.generate.templates": [
				{
					"command": "atomic-component-suite.generateCarouselTemplate",
					"group": "2_workspace@2",
					"when": "explorerResourceIsFolder && resourcePath =~ /template-parts\\/(molecules|organisms)\\//"
				},
				{
					"command": "atomic-component-suite.generateClickableTemplate",
					"group": "2_workspace@3",
					"when": "explorerResourceIsFolder && resourcePath =~ /template-parts\\/(atoms|molecules)\\//"
				},
				{
					"command": "atomic-component-suite.generateFeaturedTemplate",
					"group": "2_workspace@4",
					"when": "explorerResourceIsFolder && resourcePath =~ /template-parts\\/organisms\\//"
				},
				{
					"command": "atomic-component-suite.generateHeroTemplate",
					"group": "2_workspace@5",
					"when": "explorerResourceIsFolder && resourcePath =~ /template-parts\\/organisms\\//"
				},
				{
					"command": "atomic-component-suite.generatePluralTemplate",
					"group": "2_workspace@6",
					"when": "explorerResourceIsFolder && resourcePath =~ /template-parts\\/molecules\\//"
				},
				{
					"command": "atomic-component-suite.generateSectionTemplate",
					"group": "2_workspace@7",
					"when": "explorerResourceIsFolder && resourcePath =~ /template-parts\\/organisms\\//"
				}
			],
			"explorer/context": [
				{
					"submenu": "atomic-component-suite.generate",
					"group": "2_workspace@1",
					"when": "explorerResourceIsFolder && resourcePath =~ /template-parts\\/(atoms|molecules|organisms)\\//"
				}
			],
			"commandPalette": [
				{
					"command": "atomic-component-suite.generateComponentFiles",
					"when": "never"
				},
				{
					"command": "atomic-component-suite.generateComponentPartFile",
					"when": "never"
				},
				{
					"command": "atomic-component-suite.generateComponentStoriesFile",
					"when": "never"
				},
				{
					"command": "atomic-component-suite.generateComponentStyleFile",
					"when": "never"
				},
				{
					"command": "atomic-component-suite.generateComponentJavascriptFile",
					"when": "never"
				},
				{
					"command": "atomic-component-suite.generateCarouselTemplate",
					"when": "never"
				},
				{
					"command": "atomic-component-suite.generateClickableTemplate",
					"when": "never"
				},
				{
					"command": "atomic-component-suite.generateFeaturedTemplate",
					"when": "never"
				},
				{
					"command": "atomic-component-suite.generateHeroTemplate",
					"when": "never"
				},
				{
					"command": "atomic-component-suite.generatePluralTemplate",
					"when": "never"
				},
				{
					"command": "atomic-component-suite.generateSectionTemplate",
					"when": "never"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.74.0",
		"@vscode/test-electron": "^2.0.3",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4"
	}
}
